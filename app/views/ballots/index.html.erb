<h1>Listing ballots</h1>

<table>
  <tr>
    <th>Slug</th>
    <th>User slug</th>
    <th>Name</th>
    <th>Map slug</th>
    <th>Public</th>
    <th>Votes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ballots.each do |ballot| %>
  <tr>
    <td><%= ballot.slug %></td>
    <td><%= ballot.user_slug %></td>
    <td><%= ballot.name %></td>
    <td><%= ballot.map_slug %></td>
    <td><%= ballot.public %></td>
    <td><%= ballot.votes %></td>
    <td><%= link_to 'Show', ballot %></td>
    <td><%= link_to 'Edit', edit_ballot_path(ballot) %></td>
    <td><%= link_to 'Destroy', ballot, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ballot', new_ballot_path %>
